enum OrderStatus {
     PLACED
     PROCESSING
     SHIPPED
     DELIVERED
     CANCELLED
}

model Order {
     id         String @id @default(uuid())
     customerId String
     customer   User   @relation("CustomerOrders", fields: [customerId], references: [id])

     status     OrderStatus @default(PLACED)
     totalPrice Float
     address    String

     items OrderItem[]

     createdAt DateTime @default(now())
     updatedAt DateTime @updatedAt
}
